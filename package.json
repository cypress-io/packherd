{
  "name": "packherd",
  "version": "0.9.0",
  "description": "Herds all dependencies reachable from an entry and packs them.",
  "main": "dist/src/packherd.js",
  "types": "dist/src/packherd.d.ts",
  "bin": {
    "process-benchmark": "./dist/scripts/process-benchmark.js"
  },
  "scripts": {
    "prepublish": "yarn build",
    "build": "tsc -p ./tsconfig.json",
    "pretest": "(cp tests/fixtures/default-imports/* dist/tests/fixtures/default-imports/) && (cp tests/fixtures/default-patch/* dist/tests/fixtures/default-patch/)",
    "test-only": "(cd tests/fixtures/minimal && yarn) && tape ./dist/tests/*.js && node ./dist/tests/circular/test.js",
    "test": "yarn build && yarn test-only",
    "lint": "prettier -c ./src/",
    "lint:fix": "prettier --format ./src",
    "watch": "tsc --watch",
    "doc": "typedoc src/*.ts --readme README.md",
    "toc": "doctoc README.md"
  },
  "repository": "git@github.com:thlorenz/packherd.git",
  "author": "Thorsten Lorenz <thlorenz@gmx.de>",
  "license": "MIT",
  "private": false,
  "directories": {
    "dist": "./dist/src"
  },
  "files": [
    "dist/scripts/*",
    "dist/src/*"
  ],
  "dependencies": {
    "convert-source-map": "^1.7.0",
    "debug": "^4.3.1",
    "depstats": "^0.2.0",
    "esbuild": "^0.12.8",
    "performance-now": "^2.1.0",
    "source-map-js": "^0.6.2",
    "supports-color": "^8.1.1"
  },
  "devDependencies": {
    "@types/convert-source-map": "^1.5.1",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^14.14.20",
    "@types/tape": "^4.13.0",
    "doctoc": "^2.1.0",
    "fs-extra": "^10.0.0",
    "prettier": "^2.2.1",
    "spok": "^1.3.0",
    "tape": "^5.1.1",
    "typedoc": "^0.22.5",
    "typescript": "^4.2.3"
  }
}
